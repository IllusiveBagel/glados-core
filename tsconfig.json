{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./build",
    "rootDir": "./src",
    "target": "es6",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "esm": true
  }
}
